<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:background="@drawable/background"
              android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/greetingDisp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginBottom="40dp"
            android:fontFamily="sans-serif-condensed"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="Good"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="bold"
            />

        <!--Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:fontFamily="sans-serif-condensed"
            android:text="@string/newLoanVal"
            android:textSize="24sp"-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/fullnameDisp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:fontFamily="sans-serif-condensed"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:paddingRight="10dp"
            android:text="@string/full_name"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:textStyle="bold"/>


        <android.support.design.widget.TextInputLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/fullnameLayout"
            android:textColorHint="@color/white"
            android:paddingLeft="120dp"
            >

            <TextView
                android:id="@+id/fullname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:fontFamily="sans-serif-condensed"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="Display"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:textStyle="bold"/>
        </android.support.design.widget.TextInputLayout>

    </LinearLayout>

     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content">

         <TextView
             android:id="@+id/phoneNoDisp"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_gravity="start"
             android:layout_margin="5dip"
             android:fontFamily="sans-serif-condensed"
             android:gravity="center_vertical"
             android:padding="10dp"
             android:text="@string/mNumber"
             android:textColor="@color/white"
             android:textSize="15sp"/>

         <android.support.design.widget.TextInputLayout
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:id="@+id/phonenoLayout"
             android:textColorHint="@color/white"
             android:paddingLeft="76dp"

             >

             <TextView
                 android:id="@+id/phoneNo"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_gravity="start"
                 android:layout_margin="5dip"
                 android:fontFamily="sans-serif-condensed"
                 android:gravity="center_vertical"
                 android:padding="10dp"
                 android:text="test"
                 android:textColor="@color/white"
                 android:textSize="15sp"/>
         </android.support.design.widget.TextInputLayout>

     </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/loanAmountDisp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_margin="5dip"
                android:fontFamily="sans-serif-condensed"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:text="@string/amtVal"
                android:textColor="@color/white"
                android:textSize="15sp"/>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/loanAmountLayout"
                android:textColorHint="@color/white"
                android:paddingLeft="128dp"
                >

                <TextView
                    android:id="@+id/loanAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_margin="5dip"
                    android:fontFamily="sans-serif-condensed"
                    android:gravity="center_vertical"
                    android:padding="10dp"
                    android:text="test"
                    android:textColor="@color/white"
                    android:textSize="15sp"/>
            </android.support.design.widget.TextInputLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/payDayDisp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_margin="5dip"
                android:fontFamily="sans-serif-condensed"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:text="@string/payDay"
                android:textColor="@color/white"
                android:textSize="15sp"/>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/payDayLayout"
                android:textColorHint="@color/white"
                android:paddingLeft="60dp"
                >

                <TextView
                    android:id="@+id/payDay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_margin="5dip"
                    android:fontFamily="sans-serif-condensed"
                    android:gravity="center_vertical"
                    android:padding="10dp"
                    android:text="test"
                    android:textColor="@color/white"
                    android:textSize="15sp"/>
        </android.support.design.widget.TextInputLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

    <TextView
        android:id="@+id/statusDisp"
        android:layout_gravity="start"
        android:gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dip"
        android:padding="10dp"
        android:textSize="15sp"
        android:text="@string/status"
        android:textColor="@color/white"
        />

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/statusLayout"
                android:textColorHint="@color/white"
                android:paddingLeft="130dp"
                >

                <TextView
                    android:id="@+id/status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_margin="5dip"
                    android:fontFamily="sans-serif-condensed"
                    android:gravity="center_vertical"
                    android:padding="10dp"
                    android:text="Pending"
                    android:textColor="@color/white"
                    android:textSize="15sp"/>

            </android.support.design.widget.TextInputLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/payDateDisp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_margin="5dip"
                android:fontFamily="sans-serif-condensed"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:text="@string/dueDate"
                android:textColor="@color/white"
                android:textSize="15sp"/>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/dueDateLayout"
                android:textColorHint="@color/white"
                android:paddingLeft="120dp"
                >

                <TextView
                    android:id="@+id/payDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_margin="5dip"
                    android:fontFamily="sans-serif-condensed"
                    android:gravity="center_vertical"
                    android:padding="10dp"
                    android:text="Pending"
                    android:textColor="@color/white"
                    android:textSize="15sp"/>

            </android.support.design.widget.TextInputLayout>
        </LinearLayout>


    </LinearLayout>
</RelativeLayout>